{
  "timezone": "Europe/Bucharest",
  "llm": {
    "provider": "openai",
    "model": "gpt-4o-mini",
    "max_tokens": 256,
    "temperature": 0.7
  },
  "scheduler": {
    "tick_minutes": 30,
    "tolerance_minutes": 15
  },
  "facebook_mcp": {
    "command": "docker",
    "args": [
      "exec",
      "-i",
      "facebook-mcp",
      "python",
      "server.py"
    ]
  },
  "logging": {
    "type": "csv",
    "file": "/data/logs/posts_log.csv"
  }
}

